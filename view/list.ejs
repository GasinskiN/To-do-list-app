<%- include('header') -%>
<body>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
            <% newItems.forEach(el => { %>
                <form action="/del" method="post">
                    <div class="item">
                        <!-- post to the /del path and provide the _id of the element we want to delete -->
                        <input type="checkbox" name="itemToDelete" value="<%=el._id%>" onChange="this.form.submit()">
                        <p><%= el.toDo  %> </p>
                    </div>
                    <input type="hidden" name="nameOfList" value="<%=listTitle%>">
                </form>
            <%})%>
            
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autocapitalize="on">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>
    </div>
</body>
<%- include('footer') -%>